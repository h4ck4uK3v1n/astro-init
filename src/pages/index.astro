---
import BaseLayout from "../layouts/BaseLayout.astro";
import Testimonials from "../components/Testimonials.astro";
---

<BaseLayout>
  <main class="relative">
    <div
      class="absolute top-0 left-0 right-0 bottom-0 w-full h-full content-[''] z-10 pointer-events-none bg-[url('/assets/backgrounds/blackhole.gif')] object-cover bg-center opacity-[var(--opacity)]"
    >
    </div>
    <section
      class="font-semibold md:h-[80vh] h-screen flex flex-col items-center justify-center"
    >
      <section class="flex items-center">
        <div class="flex flex-col w-full">
          <h1
            class="text-xl md:text-5xl font-extrabold text-center lg:text-7xl 2xl:text-8xl"
          >
            <span
              class="text-transparent bg-gradient-to-br bg-clip-text from-teal-500 via-indigo-500 to-sky-500 dark:from-teal-200 dark:via-indigo-300 dark:to-sky-500"
            >
              Welcome to My
            </span>{" "}
            <span
              class="text-transparent bg-gradient-to-tr bg-clip-text from-blue-500 via-pink-500 to-red-500 dark:from-sky-300 dark:via-pink-300 dark:to-red-500"
            >
              Astro App Blog
            </span>
          </h1>

          <p class="max-w-3xl mx-auto mt-6 text-sm text-center md:text-xl">
            A blog about Astro, the modern frontend framework for faster
            websites. Learn how to build faster websites with Astro. Get the
          </p>

          <div
            class="flex flex-col mt-8 space-y-3 sm:-mx-2 sm:flex-row sm:justify-center sm:space-y-0"
          >
            <input
              id="email"
              type="text"
              class="px-6 py-3 bg-white border rounded-md dark:bg-gray-900 dark:text-white dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring sm:mx-2"
              placeholder="Email Address"
            />

            <button
              class="px-6 py-3 text-sm font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-blue-500 rounded-md hover:bg-blue-600 focus:bg-blue-600 focus:outline-none sm:mx-2"
            >
              Notify Me
            </button>
          </div>

          <p class="mt-8 text-center text-sm md:text-xl">
            Notify me when App is launched :)
          </p>
        </div>
      </section>
    </section>
  </main>
  <Testimonials />
</BaseLayout>
